{
  "npm": {
    "publish": false
  },
  "git": {
    "commitMessage": "Release ${version}",
    "tagName": "${version}",
    "tagAnnotation": "Release ${version}",
    "pushArgs": "--follow-tags -o ci.skip"
  },
  "gitlab": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "refactor",
            "section": "Changes"
          },
          {
            "type": "chore",
            "section": "Maintenance"
          },
          {
            "type": "internal",
            "section": "Maintenance"
          }
        ]
      }
    },
    "@release-it/bumper": {
      "in": "version.txt",
      "out": [
        "version.txt",
        {%- if is_volto %}
        "frontend/package.json",
        "frontend/packages/{{frontend_addon_name}}/package.json",
        {%- endif %}
        "backend/{{ python_version_file }}",
        {
          "file": "deploy/.env",
          "type": "text/x-properties",
          "path": "VERSION"
        }
      ]
    }
  }
}
